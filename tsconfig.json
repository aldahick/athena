{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "inlineSourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // unfortunately necessary since apollo-server-express's types are weird
    "skipLibCheck": true
  },
  "include": ["src/*.ts", "src/**/*.ts"]
}
